    <section id="content">
        <div class="container">
            <div class="row">
                <div class="col-12">
                <h3 style="text-align: left;">Latest Posts</h3>
            {% for page in pages|sort_by("time")|reverse %}
    {% if page.id starts with "blog/" %}
        <div class="post">
            <li style="text-align: left;"><time class="timeago" datetime="{{ page.date }}">{{ page.date }}</time> | <a href="{{ page.url }}">{{ page.title }}</a></li>
        </div>
    {% endif %}
{% endfor %}
</div>
</div>
        </div>
    </section>

